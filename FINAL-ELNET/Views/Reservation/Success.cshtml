@{
    ViewData["Title"] = "Reservation Submitted";
}

<div class="min-h-screen bg-slate-50 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-8 text-center">
                    <div class="inline-flex items-center justify-center p-4 bg-green-100 rounded-full">
                        <svg class="h-12 w-12 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <h1 class="mt-4 text-2xl font-bold text-slate-900">Reservation Submitted</h1>
                    
                    @if (TempData["Success"] != null)
                    {
                        <p class="mt-2 text-slate-600">@TempData["Success"]</p>
                    }
                    
                    @if (TempData["ReservationDetails"] != null)
                    {
                        <p class="mt-4 text-slate-600">@TempData["ReservationDetails"]</p>
                    }

                    <p class="mt-4 text-slate-500">You'll receive a confirmation email shortly.</p>
                    
                    <div class="mt-8 flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4 justify-center">
                        <a href="@Url.Action("MyReservations", "Reservation")" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-slate-800 hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                            View My Reservations
                        </a>
                        <a href="@Url.Action("Index", "Reservation")" class="inline-flex items-center px-6 py-3 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                            Make Another Reservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- No specific scripts needed for this page, but section must be defined -->
}
